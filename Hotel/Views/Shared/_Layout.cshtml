
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hotel.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Playfair+Display:ital@1&family=Roboto:wght@100;300&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
            <div class="container-fluid">
                <div class="hotelName">
                    <p class="hotelNamep1">Travellaire</p>
                    <p class="hotelNamep2">HOtel</p>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end">
                        <li class="nav-item  me-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Room" asp-action="Index">Rooms</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-white" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>


                        @{
                            if (ViewData["session"] != null)
                            {
                                <li class="nav-item me-3">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Logout" asp-action="Index">Logout</a>
                                </li>
                                <li class="nav-item me-3">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Profile" asp-action="Index">Profile</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item me-3">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="login">Log In</a>
                                </li>
                                <li class="nav-item me-3">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Register" asp-action="register">Register</a>
                                </li>
                            }
                        }


                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>


    <footer class="footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <div class="tri"></div>
                </div>
                <div class="col-md-3">
                    <p class="hotelNamep1">Travellaire</p>
                    <p class="hotelNamep2">HOtel</p>
                    <ul class="list1 mb-5">
                        <li><a>497 Evergreen Rd. Roseville, CA 95673</a></li>
                        <li><a href="">+44 345 678 903</a></li>
                        <li><a href="">Travellaire_hotels@gmail.com</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <ul class="list2">
                        <li class="mt-3"><a asp-controller="Home" asp-action="Index">About Us</a></li>
                        <li class="mt-3"><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <ul class="list2">
                        <li class="mt-3"><a href=""><img src="~/img/Path 38@2x.png" /> Facebook</a></li>
                        <li class="mt-3"><a href=""><img src="~/img/Path 39.png" /> Twitter</a></li>
                        <li class="mt-3"><a href=""><img src="~/img/Path 40.png" /> Instagram</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <p class="p2 mt-5 ">Subscribe to our newsletter</p>
                    <form class="d-flex">
                        <input class="form-control" type="search" placeholder="Email Address" aria-label="Search">
                        <button class="btn" type="submit">OK</button>
                    </form>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
